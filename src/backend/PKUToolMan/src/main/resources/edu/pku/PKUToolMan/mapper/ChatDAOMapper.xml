<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.pku.PKUToolMan.dao.ChatDAO">


    <insert id="updateChat" parameterType="Chat">
        insert into t_chat
        values (#{orderId},#{senderId},#{receiverId},#{sendTime},#{message})
    </insert>

    <select id="queryChat" parameterType="int" resultType="Chat">
        select orderid,senderid,receiverid,sendtime,message from t_chat
        where orderid=#{orderid}
    </select>

</mapper>