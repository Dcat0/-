<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/publish_time"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_time"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_id_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:text="订单编号"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/publish_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_id_hint"
        android:layout_marginVertical="5dp"
        android:text="发布时间"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_id"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/end_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/publish_time_hint"
        android:layout_marginVertical="5dp"
        android:text="结束时间"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/place_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_time_hint"
        android:layout_marginVertical="5dp"
        android:text="执行地址"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/destination_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_hint"
        android:layout_marginVertical="5dp"
        android:text="送货地址"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/description_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_hint"
        android:layout_marginVertical="5dp"
        android:text="订单描述"
        android:textColor="@color/dark_gray" />
</RelativeLayout>