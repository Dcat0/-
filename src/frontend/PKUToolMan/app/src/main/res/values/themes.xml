<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.PKUToolMan_blue" parent="@style/Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/title_bar_bg</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--标题栏设置-->
        <item name="android:textColorPrimary">@color/title_bar_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Status bar color. -->
        <!--顶部状态栏颜色设置-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--底部导航栏颜色设置-->
        <item name="android:navigationBarColor">@color/nav_bar_bg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/hint_color</item>
    </style>
</resources>