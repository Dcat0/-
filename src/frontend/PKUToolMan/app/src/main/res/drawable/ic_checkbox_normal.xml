        android:width="20dp"
        android:height="20dp"/>
    <stroke
        android:width="1dp"
        android:height="1dp"
        android:color="@color/login_main_color"/>       <!--设置边框-->
    <corners android:topLeftRadius="2dp"
        android:topRightRadius="2dp"
        android:bottomRightRadius="2dp"
        android:bottomLeftRadius="2dp"/>
    <solid
        android:color="#00000000"/>
</shape>