<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:orientation="vertical"
    tools:context=".ui.orderinfo.OrderinfoFragment"
    android:gravity="center_horizontal"
    android:padding="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="请修改个人信息"
        android:textStyle="bold"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_nickname"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="Wyxoi" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_newemail"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="fyc@pku.edu.cn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_newphone"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="13857558347" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="原密码"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_oldpassword"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="请输入原密码"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_newpassword"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="请输入新密码"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:gravity="center"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_repassword"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:textSize="23sp"
                    android:background="#DCDCDC"
                    android:gravity="center"
                    android:hint="请重复新密码"
                    android:password="true"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edge">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/modifyinfo_button"
            android:background="@drawable/below_button"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/purple_200"
            android:text="确认修改" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edge">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/returnfrommodify_button"
            android:background="@drawable/below_button"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/purple_200"
            android:text="返回" />

    </LinearLayout>

</LinearLayout>

