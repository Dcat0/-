<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/my_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/chat_imag_right"
        android:background="#FFFFFF"

        android:text="2020.12.22 20:00"
        android:textSize="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_chat_me_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/chat_imag_right"
        android:background="@drawable/send_message_background"
        android:padding="8dp"
        android:text="吴裕铖欠我10w"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/chat_imag_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:src="@drawable/testpic" />

</RelativeLayout>
